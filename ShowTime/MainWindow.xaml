<Window x:Class="ShowTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:ShowTime.ViewModel"
        xmlns:view="clr-namespace:ShowTime.View"
        xmlns:model="clr-namespace:ShowTime.Model"
        Title="MainWindow" Height="350" Width="525" >
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    
    <Grid>
        <Border Background="Red" BorderBrush="Blue" BorderThickness="4">
            <!--<StackPanel>
                <view:BrowseAllShowsView x:Name="BrowseAllView"></view:BrowseAllShowsView>
                <view:UpdateShowTimeCollectionView x:Name="UpdateView"></view:UpdateShowTimeCollectionView>
                <view:MainMenuView x:Name="UpdateView"></view:MainMenuView>
            </StackPanel>-->
            <DockPanel>
                <view:NavigatorView x:Name="ctrlNavigator" Height="50" DockPanel.Dock="Top"></view:NavigatorView>
                <Grid Background="Bisque">
                    <ContentControl Content="{Binding CurrentViewModel}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="ctrlContentPanel"></ContentControl>
                </Grid>
            </DockPanel>
        </Border>
        
        
        
    </Grid>
</Window>
